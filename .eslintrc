{
    "rules": {
        "indent": [
            2,
            "tab"
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ]
    },
    "env": {
        "browser": true
    },
    "globals": {
        "module": true,
        "require": true,
        "process": true,
        "__dirname": true,
        "exports": true
    },
    "extends": "eslint:recommended"
}